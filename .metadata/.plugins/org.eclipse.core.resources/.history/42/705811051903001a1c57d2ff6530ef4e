from selenium import webdriver
from time import sleep

# Naming convention of the python file with PyTest is test_*.py / *_test.py

def test_setup():
    
    global driver
    
    driver = webdriver.Chrome("E:/Softwares/My PC Apps/Selenium Python/Webdrivers/Chrome Driver 2.42 win32/chromedriver.exe")

    driver.implicitly_wait(20)

    driver.maximize_window()

def test_login():
    
    driver.get("http://demosite.center/wordpress/wp-login.php")

    driver.find_element_by_id("user_login").send_keys("admin")

    driver.find_element_by_name("pwd").send_keys("demo123")

    driver.find_element_by_name("wp-submit").click()

    sleep(2)

def test_teardown():
    
    driver.close()

    driver.quit()
    
